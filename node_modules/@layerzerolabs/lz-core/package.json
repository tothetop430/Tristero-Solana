{
  "name": "@layerzerolabs/lz-core",
  "version": "2.3.21",
  "description": "LayerZero Core Library",
  "license": "BUSL-1.1",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "$npm_execpath clean-prebuild && $npm_execpath build-ts",
    "build-ts": "$npm_execpath tsc --noEmit && $npm_execpath tsup",
    "clean": "$npm_execpath clean-prebuild && rimraf .turbo",
    "clean-prebuild": "rimraf dist"
  },
  "dependencies": {
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@layerzerolabs/tsup-config-next": "^2.3.21",
    "@layerzerolabs/typescript-config-next": "^2.3.21",
    "@types/jest": "^29.5.10",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "~5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}