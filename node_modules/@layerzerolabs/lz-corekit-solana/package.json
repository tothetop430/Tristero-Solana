{
  "name": "@layerzerolabs/lz-corekit-solana",
  "version": "2.3.21",
  "description": "LayerZero Core Library",
  "license": "BUSL-1.1",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "$npm_execpath clean-prebuild && $npm_execpath build-ts",
    "build-ts": "$npm_execpath tsc --noEmit && $npm_execpath tsup",
    "clean": "$npm_execpath clean-prebuild && rimraf .turbo",
    "clean-prebuild": "rimraf dist"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@ethersproject/bytes": "^5.7.0",
    "@layerzerolabs/lz-core": "^2.3.21",
    "@noble/hashes": "^1.3.2",
    "@noble/secp256k1": "^1.7.1",
    "@solana/web3.js": "^1.92.1",
    "bip39": "^3.1.0",
    "ed25519-hd-key": "^1.3.0",
    "mem": "^8.1.1",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@layerzerolabs/tronweb-typescript": "^0.0.0",
    "@layerzerolabs/tsup-config-next": "^2.3.21",
    "@layerzerolabs/typescript-config-next": "^2.3.21",
    "@types/jest": "^29.5.10",
    "@types/tronweb": "npm:@layerzerolabs/tronweb-typescript@workspace:^",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "~5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}